{% extends 'base.html.twig' %}

{% block title %}Page d'accueil - Spektacles{% endblock %}

{% block stylesheets %}
<style>
    @font-face {
        font-family: 'Aspekta';
        src: url('/fonts/AspektaVF.woff2') format('woff2');
        font-weight: 100 900;
        font-style: normal;
        font-display: swap;
    }

    :root {
        --bg-dark: #131119;
        --badge-bg: #212127;
        --text-gray: #6E7386;
        --green-dot: #4AC16E;
        --button-gradient-start: #FCFCFF;
        --button-gradient-end: #FFFFFF;
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        background-color: var(--bg-dark);
        color: #FFFFFF;
        font-family: 'Aspekta', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
        overflow-x: hidden;
    }

    .btn-gradient {
        background: linear-gradient(180deg, var(--button-gradient-start) 0%, var(--button-gradient-end) 100%);
        border: 1px solid rgba(255, 255, 255, 0.2);
        box-shadow: inset 0 2px 0 rgba(45, 46, 69, 0.25);
        transition: all 0.2s ease;
    }

    .btn-gradient:hover {
        opacity: 0.95;
        transform: translateY(-1px);
    }

    .badge-bg {
        background-color: var(--badge-bg);
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .hero-image {
        border-radius: 24px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
        overflow: hidden;
    }

    .advantage-item {
        border-right: 2px solid #FFFFFF !important;
        padding-right: 24px;
    }

    .advantage-item:last-child {
        border-right: none;
        padding-right: 0;
    }

    /* Phosphor Icons Duotone styling */
    ph-ticket-duotone,
    ph-arrow-up-right-duotone,
    ph-calendar-dots-duotone,
    ph-shield-check-duotone {
        display: inline-block;
        flex-shrink: 0;
    }

    @media (max-width: 1200px) {
        .hero-section {
            flex-direction: column;
            gap: 40px !important;
        }
        
        .hero-image {
            width: 100% !important;
            max-width: 468px;
        }
    }

    @media (max-width: 768px) {
        nav {
            flex-direction: column;
            gap: 20px;
            padding: 20px !important;
        }
        
        .nav-content {
            flex-direction: column;
            width: 100%;
        }
        
        h1 {
            font-size: 36px !important;
        }
        
        .advantages {
            flex-direction: column;
            align-items: flex-start !important;
            gap: 16px !important;
        }
        
        .advantage-item {
            border-right: none;
            border-bottom: 1px solid rgba(255, 255, 255, 0.2);
            padding-right: 0;
            padding-bottom: 16px;
        }
        
        .advantage-item:last-child {
            border-bottom: none;
        }
    }
</style>
{% endblock %}

