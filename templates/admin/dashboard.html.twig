{# templates/admin/dashboard.html.twig #}
{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}Tableau de bord{% endblock %}

{% block main %}
    <div class="row">
        <div class="col-md-6">
            <div class="card mb-3 text-white bg-primary">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-ticket-alt"></i> Réservations
                    </h5>
                    <p class="card-text display-4">{{ countReservations }}</p>
                    <p class="card-text"><small>Nombre total de réservations effectuées</small></p>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card mb-3 text-white bg-success">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-euro-sign"></i> Chiffre d'affaires
                    </h5>
                    {# On formate le chiffre : 2 décimales, virgule, espace #}
                    <p class="card-text display-4">{{ totalRevenu|number_format(2, ',', ' ') }} €</p>
                    <p class="card-text"><small>Montant total cumulé</small></p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
